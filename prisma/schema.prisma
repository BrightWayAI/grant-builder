generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String     @id @default(cuid())
  name            String
  ein             String?
  mission         String?    @db.Text
  geography       String?    // Deprecated - use geographicFocus
  geographicFocus Json?      // Structured: { countries: string[], states: string[], regions: string[] }
  budgetRange     String?
  populationsServed String?
  programAreas    String[]
  orgType         String?    // e.g., "501c3", "government", "tribal", "education"
  fundingMin      Int?       // Minimum grant amount interested in
  fundingMax      Int?       // Maximum grant amount interested in
  grantTypes      String[]   // e.g., ["federal", "state", "foundation", "corporate"]
  
  // Stripe subscription fields
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionStatus   SubscriptionStatus @default(BETA)
  seatsPurchased       Int?
  proposalsUsedThisMonth Int     @default(0)
  proposalResetDate    DateTime?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  users           User[]
  documents       Document[]
  proposals       Proposal[]
  savedGrants     SavedGrant[]
  digestPreference GrantDigestPreference?
  feedback        Feedback[]
}

enum SubscriptionStatus {
  BETA            // Beta access (full features, no payment)
  TRIAL           // Free trial (3 proposals)
  ACTIVE          // Paid subscription active
  PAST_DUE        // Payment failed, grace period
  CANCELED        // Subscription canceled
  UNPAID          // Multiple payment failures
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  name            String?
  passwordHash    String?
  image           String?
  emailVerified   DateTime?
  role            String        @default("member")
  organizationId  String?
  organization    Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  hasSeenWelcome  Boolean       @default(false)
  
  // MFA fields
  mfaEnabled      Boolean       @default(false)
  mfaSecret       String?       // Encrypted TOTP secret
  mfaBackupCodes  String[]      // Hashed backup codes
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  accounts        Account[]
  sessions        Session[]
  feedback        Feedback[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Document {
  id              String          @id @default(cuid())
  organizationId  String
  organization    Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  filename        String
  fileType        String
  fileUrl         String
  fileSize        Int
  documentType    DocumentType
  programArea     String?
  status          DocumentStatus  @default(PROCESSING)
  errorMessage    String?
  version         Int             @default(1)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  chunks          DocumentChunk[]
}

model DocumentChunk {
  id          String   @id @default(cuid())
  documentId  String
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  content     String   @db.Text
  chunkIndex  Int
  pineconeId  String
  metadata    Json?
  createdAt   DateTime @default(now())
}

model Proposal {
  id                  String          @id @default(cuid())
  organizationId      String
  organization        Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  title               String
  funderName          String?
  programTitle        String?
  deadline            DateTime?
  fundingAmountMin    Int?
  fundingAmountMax    Int?
  status              ProposalStatus  @default(DRAFT)
  rfpFileUrl          String?
  rfpFilename         String?
  parsedRequirements  Json?
  eligibility         String[]
  attachments         String[]
  submissionInstructions String?      @db.Text
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  
  sections            ProposalSection[]
}

model ProposalSection {
  id                String   @id @default(cuid())
  proposalId        String
  proposal          Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  sectionName       String
  description       String?  @db.Text
  content           String   @db.Text @default("")
  generatedContent  String?  @db.Text
  wordLimit         Int?
  charLimit         Int?
  isRequired        Boolean  @default(true)
  order             Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum DocumentType {
  PROPOSAL
  ANNUAL_REPORT
  PROGRAM_DESCRIPTION
  LOGIC_MODEL
  IMPACT_REPORT
  EVALUATION_REPORT
  ORG_OVERVIEW
  BOILERPLATE
  STAFF_BIOS
  BOARD_BIOS
  FORM_990
  AUDITED_FINANCIALS
  OTHER
}

enum DocumentStatus {
  PROCESSING
  INDEXED
  FAILED
}

enum ProposalStatus {
  DRAFT
  IN_PROGRESS
  SUBMITTED
  WON
  LOST
  ARCHIVED
}

enum FeedbackSentiment {
  POSITIVE
  NEUTRAL
  NEGATIVE
}

model Feedback {
  id              String           @id @default(cuid())
  organizationId  String?
  organization    Organization?    @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  userId          String?
  user            User?            @relation(fields: [userId], references: [id], onDelete: SetNull)
  sentiment       FeedbackSentiment
  message         String?          @db.Text
  pageUrl         String?
  allowContact    Boolean          @default(false)
  metadata        Json?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model SavedGrant {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  grantId         String       // Grants.gov opportunity ID
  title           String
  funderName      String
  deadline        DateTime?
  awardFloor      Int?
  awardCeiling    Int?
  description     String?      @db.Text
  eligibleTypes   String[]
  categories      String[]
  matchScore      Int          @default(0)
  savedAt         DateTime     @default(now())

  @@unique([organizationId, grantId])
}

model GrantDigestPreference {
  id              String       @id @default(cuid())
  organizationId  String       @unique
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  enabled         Boolean      @default(true)
  lastSentAt      DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model ErrorLog {
  id              String       @id @default(cuid())
  organizationId  String?
  userId          String?
  errorType       ErrorType
  message         String       @db.Text
  stack           String?      @db.Text
  endpoint        String?
  statusCode      Int?
  metadata        Json?
  resolved        Boolean      @default(false)
  createdAt       DateTime     @default(now())
}

enum ErrorType {
  API_ERROR
  AI_ERROR
  CLIENT_ERROR
  DOCUMENT_ERROR
  AUTH_ERROR
}

// SOC 2 Audit Logging
model AuditLog {
  id              String       @id @default(cuid())
  userId          String?
  userEmail       String?
  organizationId  String?
  action          AuditAction
  resourceType    String?      // e.g., "proposal", "document", "user", "organization"
  resourceId      String?
  description     String?
  ipAddress       String?
  userAgent       String?
  metadata        Json?
  createdAt       DateTime     @default(now())

  @@index([userId])
  @@index([organizationId])
  @@index([action])
  @@index([createdAt])
}

enum AuditAction {
  // Authentication
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  PASSWORD_CHANGED
  PASSWORD_RESET_REQUESTED
  
  // User management
  USER_CREATED
  USER_UPDATED
  USER_DELETED
  USER_INVITED
  
  // Organization
  ORG_CREATED
  ORG_UPDATED
  ORG_DELETED
  
  // Documents
  DOCUMENT_UPLOADED
  DOCUMENT_VIEWED
  DOCUMENT_DELETED
  
  // Proposals
  PROPOSAL_CREATED
  PROPOSAL_UPDATED
  PROPOSAL_DELETED
  PROPOSAL_EXPORTED
  AI_CONTENT_GENERATED
  
  // Grants
  GRANT_SAVED
  GRANT_REMOVED
  
  // Admin actions
  ADMIN_ACCESS
  SUBSCRIPTION_CHANGED
  
  // Data access
  DATA_EXPORTED
  DATA_DELETED
  
  // MFA
  MFA_ENABLED
  MFA_DISABLED
  MFA_VERIFIED
}

// Rate limiting for auth attempts
model LoginAttempt {
  id          String   @id @default(cuid())
  email       String
  ipAddress   String
  success     Boolean
  createdAt   DateTime @default(now())

  @@index([email, createdAt])
  @@index([ipAddress, createdAt])
}
