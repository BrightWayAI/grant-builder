generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String     @id @default(cuid())
  name            String
  ein             String?
  mission         String?    @db.Text
  geography       String?
  budgetRange     String?
  populationsServed String?
  programAreas    String[]
  orgType         String?    // e.g., "501c3", "government", "tribal"
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  users           User[]
  documents       Document[]
  proposals       Proposal[]
  savedGrants     SavedGrant[]
  digestPreference GrantDigestPreference?
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  name            String?
  passwordHash    String?
  image           String?
  emailVerified   DateTime?
  role            String        @default("member")
  organizationId  String?
  organization    Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  accounts        Account[]
  sessions        Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Document {
  id              String          @id @default(cuid())
  organizationId  String
  organization    Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  filename        String
  fileType        String
  fileUrl         String
  fileSize        Int
  documentType    DocumentType
  programArea     String?
  status          DocumentStatus  @default(PROCESSING)
  errorMessage    String?
  version         Int             @default(1)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  chunks          DocumentChunk[]
}

model DocumentChunk {
  id          String   @id @default(cuid())
  documentId  String
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  content     String   @db.Text
  chunkIndex  Int
  pineconeId  String
  metadata    Json?
  createdAt   DateTime @default(now())
}

model Proposal {
  id                  String          @id @default(cuid())
  organizationId      String
  organization        Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  title               String
  funderName          String?
  programTitle        String?
  deadline            DateTime?
  fundingAmountMin    Int?
  fundingAmountMax    Int?
  status              ProposalStatus  @default(DRAFT)
  rfpFileUrl          String?
  rfpFilename         String?
  parsedRequirements  Json?
  eligibility         String[]
  attachments         String[]
  submissionInstructions String?      @db.Text
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  
  sections            ProposalSection[]
}

model ProposalSection {
  id                String   @id @default(cuid())
  proposalId        String
  proposal          Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  sectionName       String
  description       String?  @db.Text
  content           String   @db.Text @default("")
  generatedContent  String?  @db.Text
  wordLimit         Int?
  charLimit         Int?
  isRequired        Boolean  @default(true)
  order             Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum DocumentType {
  PROPOSAL
  ANNUAL_REPORT
  PROGRAM_DESCRIPTION
  LOGIC_MODEL
  IMPACT_REPORT
  EVALUATION_REPORT
  ORG_OVERVIEW
  BOILERPLATE
  STAFF_BIOS
  BOARD_BIOS
  FORM_990
  AUDITED_FINANCIALS
  OTHER
}

enum DocumentStatus {
  PROCESSING
  INDEXED
  FAILED
}

enum ProposalStatus {
  DRAFT
  IN_PROGRESS
  SUBMITTED
  WON
  LOST
  ARCHIVED
}

model SavedGrant {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  grantId         String       // Grants.gov opportunity ID
  title           String
  funderName      String
  deadline        DateTime?
  awardFloor      Int?
  awardCeiling    Int?
  description     String?      @db.Text
  eligibleTypes   String[]
  categories      String[]
  matchScore      Int          @default(0)
  savedAt         DateTime     @default(now())

  @@unique([organizationId, grantId])
}

model GrantDigestPreference {
  id              String       @id @default(cuid())
  organizationId  String       @unique
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  enabled         Boolean      @default(true)
  lastSentAt      DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}
